<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45.0dip"
    android:background="#ffcd2626"
    android:id="@+id/title"
    android:gravity="center_vertical">
        <ImageView
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:id="@+id/title_city_manager"
            android:src="@drawable/title_city"/>
        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:id="@+id/city_seperator"
            android:background="#A71717"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/title_city_name"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:textSize="22.0sp"
            android:text="北京天气"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/title_update_liner">
            <ImageView
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/title_update"
                android:layout_gravity="center"
                android:id="@+id/title_update_btn"/>
            <ProgressBar
                android:id="@+id/title_update_progress"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:indeterminate="true"
                android:layout_alignParentRight="true"
                android:indeterminateDrawable="@drawable/title_update_anim"
                android:visibility="gone"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_liner"
            android:src="@drawable/title_share" />
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"
            />
    </RelativeLayout>

