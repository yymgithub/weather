<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期三"
            android:id="@+id/nextWeather3"
            android:textSize="15.0sp"
            android:textColor="@android:color/white"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/nextPic3"
            android:src="@drawable/biz_plugin_weather_duoyun"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.0sp"
            android:textColor="@android:color/white"
            android:text="12℃~25℃"
            android:singleLine="true"
            android:id="@+id/next_tmperature3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            android:singleLine="true"
            android:id="@+id/next_climate3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/next_wind3"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期三"
            android:id="@+id/nextWeather4"
            android:textSize="15.0sp"
            android:textColor="@android:color/white"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/nextPic4"
            android:src="@drawable/biz_plugin_weather_duoyun"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.0sp"
            android:textColor="@android:color/white"
            android:text="12℃~25℃"
            android:singleLine="true"
            android:id="@+id/next_tmperature4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            android:singleLine="true"
            android:id="@+id/next_climate4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/next_wind4"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
