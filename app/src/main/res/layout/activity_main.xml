<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:id="@+id/title"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:id="@+id/title_city_manager"
            android:src="@drawable/title_city"/>
        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:id="@+id/city_seperator"
            android:background="#A71717"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/title_city_name"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:textSize="22.0sp"
            android:text="北京天气"
            android:textColor="@android:color/white"/>
        <ImageView
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/title_update"
            android:layout_gravity="center"
            android:id="@+id/title_update_btn"
            />
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share" />
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        android:layout_below="@id/title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15.0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="40sp"
                android:id="@+id/city"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/city"
                android:text="今天18：25发布"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15.0dip"
                android:textSize="15sp"
                android:singleLine="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/humidity"
                android:layout_marginLeft="15.0dip"
                android:layout_below="@id/time"
                android:textColor="@android:color/white"
                android:text="湿度：57%"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6.0dip"
                    android:paddingLeft="12.0dip"
                    android:paddingRight="12.0dip"
                    android:paddingTop="6.0dip"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM2.5"
                            android:textColor="@android:color/white"
                            android:singleLine="true"
                            android:textSize="12.0sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:singleLine="true"
                            android:id="@+id/pm_data"
                            android:textSize="30.0sp"
                            android:textColor="@android:color/white"
                            />

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/pm2_5_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:src="@drawable/biz_plugin_weather_0_50"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="重度污染"
                    android:textSize="20.0sp"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:gravity="center"
                    android:id="@+id/pm2_5_quality"/>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidity"
                android:layout_marginTop="5.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/biz_plugin_weather_qing"
                    android:id="@+id/weather_img"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="今天 星期三"
                    android:textSize="20.0sp"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@id/weather_img"
                    android:id="@+id/week_today"
                    android:layout_marginLeft="5.0dip"
                    android:singleLine="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_below="@id/week_today"
                    android:textSize="30.0sp"
                    android:textColor="@android:color/white"
                    android:text="15℃~25℃"
                    android:layout_toRightOf="@id/weather_img"
                    android:singleLine="true"
                    android:id="@+id/tmperature"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/weather_img"
                    android:layout_below="@id/tmperature"
                    android:layout_marginLeft="5.0dip"
                    android:text="多云转晴"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"
                    android:singleLine="true"
                    android:id="@+id/climate"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/wind"
                    android:layout_toRightOf="@id/weather_img"
                    android:layout_below="@id/climate"
                    android:text="微风"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp"
                    android:layout_marginLeft="5.0dip"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>